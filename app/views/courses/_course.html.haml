.card.mt-3
  .card-body 
    %h5.card-title
      = link_to course_path(course), class: "text-dark" do
        %span.fa.fa-book
        = course.title
    %h6.card-subtitle.my-2.text-muted
      %span.fa.fa-at
      = course.user.email
    %h6.card-subtitle.my-2.text-muted
      %span.fa.fa-calendar-alt
      = course.created_at.strftime('%d-%b-%Y')
    %p.card-text.border-top.py-3.text-wrap
      %span.fa.fa-book-open
      %important.mt-1= truncate(strip_tags(course.description.to_s), length: 50)
  .card-footer.d-flex.justify-content-lg-around.flex-lg-row.flex-sm-column
    = link_to course, class: "btn btn-sm btn-primary" do
      %span.fa.fa-eye
      Show
    = link_to edit_course_path(course), class: "btn btn-sm btn-info" do
      %span.fa.fa-pen
      Edit
    = link_to course, method: :delete, data: { confirm_swal: "Are you sure want to delete #{course.title} ?" }, class: "btn btn-sm btn-danger" do
      %span.fa.fa-trash
      Destroy